<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="20dp"
    android:id="@+id/main"
    android:background="@color/white"
    tools:context=".HomeActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginBottom="56dp">

        <LinearLayout
            android:padding="16dp"
            android:orientation="vertical"
            android:background="@drawable/wavy_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="RESEP MASAKAN INDONESIA"
                android:textStyle="bold"
                android:textSize="30sp"
                android:fontFamily="serif"
                android:textColor="@color/black"
                android:layout_marginBottom="5pt"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/halo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="Halo! Mau masak apa hari ini?"
                android:textSize="17sp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="30dp"/>

            <!-- Tambah ini di layout Home kamu -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:elevation="6dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📝 Memo Masak"
                        android:fontFamily="serif"
                        android:layout_marginBottom="10dp"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/editMemo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Tulis memo kamu di sini..."
                        android:background="@android:drawable/edit_text"
                        android:padding="16dp"
                        android:layout_marginTop="10dp"
                        android:textColor="#000000"
                        android:textColorHint="#999999"
                        android:textSize="16sp"/>

                    <Button
                        android:id="@+id/btnMemo"
                        android:elevation="6dp"
                        android:letterSpacing="0.05"
                        android:textStyle="bold"
                        android:fontFamily="serif"
                        android:backgroundTint="#f98f2a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tambah Memo" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:scaleType="centerCrop"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/gado_gado"
                            android:clipToOutline="true"
                            android:background="@drawable/rounded_image"/>

                        <View
                            android:layout_gravity="bottom"
                            android:background="#80000000"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"/>

                        <TextView
                            android:id="@+id/gadogado"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:text="Gado-gado"
                            android:fontFamily="serif"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:padding="8dp"/>

                    </FrameLayout>

                    <Button
                        android:id="@+id/btnlihatResep1"
                        android:text="Lihat Resep"
                        android:textSize="16dp"
                        android:fontFamily="serif"
                        android:paddingLeft="24dp"
                        android:paddingRight="24dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:elevation="6dp"
                        android:letterSpacing="0.05"
                        android:textStyle="bold"
                        android:backgroundTint="#f98f2a"
                        android:textColor="@color/white"
                        android:layout_marginTop="5pt"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:scaleType="centerCrop"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/gudeg"
                            android:clipToOutline="true"
                            android:background="@drawable/rounded_image"/>

                        <View
                            android:layout_gravity="bottom"
                            android:background="#80000000"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"/>

                        <TextView
                            android:id="@+id/gudeg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:text="Gudeg"
                            android:fontFamily="serif"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:padding="8dp"/>
                    </FrameLayout>
                    <Button
                        android:id="@+id/btnlihatResep2"
                        android:text="Lihat Resep"
                        android:textSize="16dp"
                        android:fontFamily="serif"
                        android:backgroundTint="#f98f2a"
                        android:layout_marginTop="5pt"
                        android:paddingLeft="24dp"
                        android:paddingRight="24dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:elevation="6dp"
                        android:letterSpacing="0.05"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:scaleType="centerCrop"
                            android:layout_marginTop="10dp"
                            android:clipToOutline="true"
                            android:background="@drawable/rounded_image"
                            android:src="@drawable/mie_aceh"/>

                        <View
                            android:layout_gravity="bottom"
                            android:background="#80000000"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"/>

                        <TextView
                            android:id="@+id/mieaceh"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:text="Mie Aceh"
                            android:fontFamily="serif"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:padding="8dp"/>

                    </FrameLayout>
                    <Button
                        android:id="@+id/btnlihatResep3"
                        android:text="Lihat Resep"
                        android:textSize="16dp"
                        android:fontFamily="serif"
                        android:paddingLeft="24dp"
                        android:paddingRight="24dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:elevation="6dp"
                        android:letterSpacing="0.05"
                        android:textStyle="bold"
                        android:backgroundTint="#f98f2a"
                        android:layout_marginTop="5pt"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:scaleType="centerCrop"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/pempek"
                            android:clipToOutline="true"
                            android:background="@drawable/rounded_image"/>

                        <View
                            android:layout_gravity="bottom"
                            android:background="#80000000"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"/>

                        <TextView
                            android:id="@+id/text_food_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:text="Pempek Palembang"
                            android:fontFamily="serif"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:padding="8dp"/>

                    </FrameLayout>
                    <Button
                        android:id="@+id/btnlihatResep4"
                        android:text="Lihat Resep"
                        android:textSize="16dp"
                        android:fontFamily="serif"
                        android:paddingLeft="24dp"
                        android:paddingRight="24dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:elevation="6dp"
                        android:letterSpacing="0.05"
                        android:textStyle="bold"
                        android:backgroundTint="#f98f2a"
                        android:layout_marginTop="5pt"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:scaleType="centerCrop"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/sate"
                            android:clipToOutline="true"
                            android:background="@drawable/rounded_image"/>

                        <View
                            android:layout_gravity="bottom"
                            android:background="#80000000"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"/>

                        <TextView
                            android:id="@+id/sate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:text="Sate"
                            android:fontFamily="serif"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:padding="8dp"/>

                    </FrameLayout>
                    <Button
                        android:id="@+id/btnlihatResep5"
                        android:text="Lihat Resep"
                        android:textSize="16dp"
                        android:fontFamily="serif"
                        android:backgroundTint="#f98f2a"
                        android:paddingLeft="24dp"
                        android:paddingRight="24dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:elevation="6dp"
                        android:letterSpacing="0.05"
                        android:textStyle="bold"
                        android:layout_marginTop="5pt"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navBar"
        android:background="@drawable/bg_navbar"
        android:layout_gravity="bottom"
        android:elevation="8dp"
        app:menu="@menu/navbar"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

